@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Edit @Html.DisplayFor(model => model.ClientName)</h1>
<hr />

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)
  <h3>Select Stylist:</h3>
  @Html.DropDownList("StylistId")<br><br>
  <h3>@Html.LabelFor(model => model.ClientName, "Client Name:")</h3>
  @Html.EditorFor(model => model.ClientName)<br><br>
  <input type="submit" value="Save" />
}
<hr />
<h4>@Html.ActionLink("Back To Clients", "Index")</h4>
<h4>@Html.ActionLink("Stylists", "Index", "Stylists")</h4>