@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Client Details</h1>
<hr />
<h2>Client Name: @Html.DisplayFor(model => model.ClientName)</h2><br>
<h3>Stylist: @Html.ActionLink($"{Model.Stylist.StylistName}", "Details", "Stylists", new { id = Model.StylistId })</h3>
<hr />
<button>@Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId })</button>
<button>@Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId })</button><br><br>
<h4>@Html.ActionLink("Back to Clients", "Index")</h4>
<h4>@Html.ActionLink("Stylists", "Index", "Stylists")</h4>