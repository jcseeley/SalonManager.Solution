@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model HairSalon.Models.Stylist

<h1>@Html.DisplayFor(model => model.StylistName)'s Details</h1>
<hr />
@if (Model.Clients.Count == 0)
{
  <h3>No Clients Added</h3>
}
else
{
  <h2>Clients:</h2>
  @foreach(Client client in Model.Clients)
  {
    <h3>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</h3>
  }
}
<hr />
<button>@Html.ActionLink("Add Client", "Create", "Clients")</button>
<button>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</button>
<button>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</button><br><br>
<h4>@Html.ActionLink("Back to Stylists", "Index")</h4>