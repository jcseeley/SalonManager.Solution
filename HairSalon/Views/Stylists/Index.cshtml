@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>
<hr />
@if (@Model.Count == 0)
{
  <h2>No Stylists Added</h2>
}
else
{
  @foreach (Stylist stylist in Model)
  {
    <h3>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</h3>
  }
}
<hr />
<h4>@Html.ActionLink("Add Stylist", "Create")</h4>