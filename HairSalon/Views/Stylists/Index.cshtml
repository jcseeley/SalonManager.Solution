@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h2 class="stylist">Stylists:</h2>
@if (@Model.Count == 0)
{
  <h3 class="stylist">There are no Stylists at your salon.</h3>
}
else
{
  <div class="card stylistCard">
    <ul>
      @foreach (Stylist stylist in Model)
      {
        <li class="listItem">@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
      }
    </ul>
  </div>
}
<p class="stylist">@Html.ActionLink("Add a Stylist", "Create")</p>